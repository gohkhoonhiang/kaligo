<%= form_for @hotel do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.url_field :image %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 0.01 %>
  </p>

  <p>
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if @hotel.errors.any? %>
